@model Assignment3_n01455211.Models.Teacher
    @{
    ViewBag.Title = "AddNew";
}
<div id="containershow">
    <nav>
        <a class="back" href="/Teacher/List">Back To Teachers</a>
    </nav>
    <h2>New Teacher</h2>
    <form method="POST" action="/Teacher/Create" name="addnewteacher">
        <div class="inputrow">
            <label for="TeacherFname">First Name:</label>
            <input type="text" id="TeacherFname" name="TeacherFname" />
            <p id="fnameerror"></p>

        </div>
        <div class="inputrow">
            <label for="TeacherLname">Last Name:</label>
            <input type="text" id="TeacherLname" name="TeacherLname" />
            <p id="lnameerror"></p>
        </div>
        <div class="inputrow">
            <label for="EmployeeNumber">Employee #:</label>
            <input type="text" id="EmployeeNumber" name="EmployeeNumber" placeholder="A123" />
            <p id="enerror"></p>
        </div>
        <div class="inputrow">
            <label for="Salary">Salary:</label>
            <input type="text" id="Salary" name="Salary" />
            <p id="salaryerror"></p>
        </div>
        <div class="inputrow">
            <input class="addnew" type="submit" value="Add Teacher" />
        </div>
    </form>
</div>