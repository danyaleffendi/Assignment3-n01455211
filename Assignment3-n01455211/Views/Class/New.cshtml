@model Assignment3_n01455211.Models.Class
@{
    ViewBag.Title = "AddNew";
}


<div id="containershow">
    <nav>
        <a class="back" href="/Class/List">Back To Class</a>
    </nav>
    <h2>New Teacher</h2>
    <form method="POST" action="/Class/Create">
        <div class="inputrow">
            <label for="Classcode">Class Code:</label>
            <div>
                <input type="text" id="Classcode" name="Classcode" />
            </div>
        </div>
        <div class="inputrow">
            <label for="Classname">Class Name:</label>
            <div>
                <input type="text" id="Classname" name="Classname" />
            </div>
        </div>
        <div class="inputrow">
            <label for="Teacherid">Teacher ID:</label>
            <div>
                <input type="number" id="Teacherid" name="Teacherid" />
            </div>
        </div>
        <div class="inputrow">
            <label for="Startdate">Start Date:</label>
            <input type="date" id="Startdate" name="Startdate" />
        </div>
        <div class="inputrow">
            <label for="Finishdate">Finish Date:</label>
            <div>
                <input type="date" id="Finishdate" name="Finishdate" />
            </div>
        </div>
           <div class="inputrow" >
                <input class="addnew" type="submit" value="Add Class" />
            </div>
</form>
</div>